{
  "name": "ds-toolkit",
  "version": "0.1.0",
  "description": "A data structures library for JavaScript and TypeScript, with performance optimized by Rust and WebAssembly.",
  "main": "lib/index.cjs",
  "scripts": {
    "test": "node_modules/.bin/tsc &&cargo test",
    "cargo-build": "node_modules/.bin/tsc &&cargo build --message-format=json-render-diagnostics > cargo.log",
    "cross-build": "node_modules/.bin/tsc &&cross build --message-format=json-render-diagnostics > cross.log",
    "postcargo-build": "node_modules/.bin/neon dist < cargo.log",
    "postcross-build": "node_modules/.bin/neon dist -m /target < cross.log",
    "debug": "npm run cargo-build --",
    "build": "npm run cargo-build -- --release",
    "cross": "npm run cross-build -- --release",
    "prepack": "node_modules/.bin/tsc &&neon update",
    "version": "node_modules/.bin/neon bump --binaries platforms && git add .",
    "release": "gh workflow run release.yml -f dryrun=false -f version=patch",
    "dryrun": "gh workflow run publish.yml -f dryrun=true"
  },
  "author": "Hela Ben Khalfallah",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "types": "./lib/index.d.cts",
  "files": [
    "lib/**/*.?({c,m}){t,j}s"
  ],
  "neon": {
    "type": "library",
    "org": "@ds-toolkit",
    "platforms": "common",
    "load": "./src/load.cts"
  },
  "devDependencies": {
    "@neon-rs/cli": "^0.1.73",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@neon-rs/load": "^0.1.73"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helabenkhalfallah/ds-toolkit.git#main"
  },
  "bugs": {
    "url": "https://github.com/helabenkhalfallah/ds-toolkit/issues"
  },
  "homepage": "https://github.com/helabenkhalfallah/ds-toolkit/tree/main#readme"
}
